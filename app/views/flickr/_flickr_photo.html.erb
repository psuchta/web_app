<div class="p-4 w-full md:w-1/3 sm:mb-0 mb-6">
  <%= link_to flickr_show_photo_path(url_o: photo['url_o'], url_m: photo['url_m']), "data-turbo-frame": "show_photo" do %>
    <div class="rounded-lg h-64 overflow-hidden border border-sky-500">
      <img alt="content" class="object-cover object-center h-full w-full" src=<%= photo['url_m'] %>>
    </div>
    <div class="flex flex-row mt-5 justify-between">
      <h2 class="tooltip text-xl font-medium title-font text-gray-900" title="<%=photo['title']%>"><%=photo['title'].truncate(70)%>
      </h2>
      <span class="text-gray-400 mr-3 inline-flex items-center leading-none text-sm py-1">
        <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg><%= photo.views %>
      </span>
    </div>
  <% end %>
</div>
