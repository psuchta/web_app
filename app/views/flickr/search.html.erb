<section class="text-gray-600 body-font">
  <div class="flex flex-wrap w-full mb-1">
    <div class="lg:w-1/2 w-full mb-6">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Image search</h1>
      <div class="h-1 w-20 bg-indigo-500 rounded"></div>
    </div>
  </div>
  <div class="mb-10">
    <%= render partial: 'common/search_bar', locals: { search_path: flickr_search_path }%>
  </div>
  <% if @photos.nil? || @photos.size.zero? %>
    <div>
      <p class="w-1/3 text-center mx-auto">No images to show</p>
    </div>
  <% else %>
    <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4">
      <%= render partial: 'flickr_photo', collection: @photos, as: :photo%>
    </div>
  <% end %>
</section>