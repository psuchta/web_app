<h1 class="text-center pb-10"> New Address</h1>

<%= form_with model: @address do |form| %>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/12">
      <%= form.label :name, "Name", class: 'block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-11/12">
      <%= form.text_field :name, class: 'appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-800' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/12">
      <%= form.label :description, "Description", class: 'block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4'  %>
    </div>
    <div class="md:w-11/12">
      <%= form.text_area :description, size: "60x10", class: 'appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-800' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/12">
      <%= form.label :address, "Address", class: 'block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4'  %>
    </div>
    <div class="md:w-11/12">
      <%= form.text_area :address, size: "60x10", class: 'appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-800' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/12">
      <%= form.label :latitude, "Latitude", class: 'block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4'  %>
    </div>
    <div class="md:w-11/12">
      <%= form.text_field :latitude, class: 'appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-800' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/12">
      <%= form.label :longtitude, "Longtitude", class: 'block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4'  %>
    </div>
    <div class="md:w-11/12">
      <%= form.text_field :longtitude, class: 'appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-800' %>
    </div>
  </div>
  
  <div class="text-center">
    <%= form.submit class:'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>

