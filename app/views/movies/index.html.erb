<h1 class="text-center pb-10"> Movies</h1>

<div class="flex flex-col">
  <div class="h-15">
    <%= link_to 'New movie', new_movie_path, class: 'float-right bg-blue-500 hover:bg-blue-700 text-white font-bold py-4 px-4 rounded' %>
  </div>
  <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full table-fixed divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class=" w-1/2 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Title
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Year
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Rating
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Link
              </th>
              <th scope="col" class="relative px-6 py-3">
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @movies.each do |movie| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= movie[:title] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= movie[:year] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= movie[:rating] %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to movie[:link], movie[:link], target: :blank %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to 'Edit', edit_movie_path(movie[:id]), class: 'text-indigo-600 hover:text-indigo-900'%>
                  <%= link_to "Delete", movie_path(movie[:id]), data:{ confirm: "Are you sure?", "turbo-method": :delete }, class: 'text-indigo-600 hover:text-indigo-900' %>
                </td>
              </tr>
            <% end %>

            <!-- More people... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
